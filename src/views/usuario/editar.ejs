<div class="profile-edit-container">

    <h1 class="profile-edit-title">Editar perfil</h1>

    <!-- FOTO ACTUAL -->
    <div class="profile-photo-section">
        <% if (usuario.foto_perfil) { %>
            <img src="<%= usuario.foto_perfil %>" alt="Foto de perfil" class="profile-photo">
            <% } else { %>
                <p class="no-photo">No tienes foto de perfil</p>
                <% } %>
    </div>

    <!-- FORMULARIO -->
    <form action="/usuario/editar" method="POST" enctype="multipart/form-data" class="profile-edit-form">

        <!-- Subir nueva foto -->
        <div class="mb-3">
            <label for="formFile" class="form-label">Nueva foto de perfil</label>
            <input class="form-control" accept="image/*" type="file" id="formFile" name="foto">
        </div>

        <hr class="edit-separator">

        <!-- Nombre -->
        <label class="edit-label">Nombre</label>
        <input type="text" name="nombre" value="<%= usuario.nombre %>" required class="edit-input">

        <!-- Biografía -->
        <label class="edit-label">Biografía</label>
        <textarea name="biografia" rows="4" class="edit-textarea"><%= usuario.biografia || "" %></textarea>

        <button type="submit" class="btn-save">Actualizar perfil</button>
    </form>

    <a href="/usuario/<%= usuario.id_usuario %>" class="btn-cancel">Volver al perfil</a>
</div>