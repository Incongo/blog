<div class="edit-container">
    <h1 class="edit-title">Editar publicación</h1>

    <form action="/publicaciones/<%= publicacion.id_publicacion %>/editar" method="POST" class="edit-form">

        <label class="edit-label">Título</label>
        <input type="text" name="titulo" value="<%= publicacion.titulo %>" required class="edit-input">

        <label class="edit-label">Contenido</label>
        <textarea name="contenido" required class="edit-textarea"><%= publicacion.contenido %></textarea>

        <label class="edit-label">Categoría</label>
        <select name="categoria" class="edit-select">
            <option value="">Sin categoría</option>
            <% categorias.forEach(cat=> { %>
                <option value="<%= cat.id_categoria %>" <%=publicacion.id_categoria===cat.id_categoria ? "selected" : ""
                    %>
                    >
                    <%= cat.nombre %>
                </option>
                <% }) %>
        </select>

        <button type="submit" class="btn-save">Guardar cambios</button>
    </form>

    <a href="/publicaciones/<%= publicacion.id_publicacion %>" class="btn-cancel">
        Cancelar
    </a>
</div>