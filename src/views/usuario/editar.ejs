<h1>Editar perfil</h1>

<!-- Foto actual -->
<% if (usuario.foto_perfil) { %>
    <img src="<%= usuario.foto_perfil %>" alt="Foto de perfil"
        style="width:150px; height:150px; object-fit:cover; border-radius:50%; margin-bottom:20px;">
    <% } else { %>
        <p>No tienes foto de perfil</p>
        <% } %>

            <!-- FORMULARIO ÚNICO -->
            <form action="/usuario/editar" method="POST" enctype="multipart/form-data" style="margin-top:20px;">

                <!-- Subir nueva foto -->
                <label for="formFile" class="form-label">Nueva foto de perfil</label><br>
                <input class="form-control" type="file" id="formFile" name="foto" accept="image/*">

                <hr>

                <!-- Editar nombre -->
                <label>Nombre</label>
                <input type="text" name="nombre" value="<%= usuario.nombre %>" required>

                <!-- Editar biografía -->
                <label>Biografía</label>
                <textarea name="biografia" rows="4"><%= usuario.biografia || "" %></textarea>

                <button type="submit" style="margin-top:20px;">Actualizar perfil</button>
            </form>

            <hr>

            <a href="/usuario/<%= usuario.id_usuario %>">Volver al perfil</a>